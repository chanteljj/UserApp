@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h3 class="display-4">
        View All Users
    </h3>
    <div class="col text-center">
        <a asp-page="AddUser">Add New User</a>
        <table class="table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Surname</td>
                        <td>
                            <a asp-page="./EditUser" asp-route-id="@user.Id">Edit</a> |
                            <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
